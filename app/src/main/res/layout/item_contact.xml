<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:gravity="center_vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="60dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgContantImage" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Saiful Islam"
                android:id="@+id/txtContantName"
                android:layout_weight="1"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Deputy Commisioner, Dhaka"
                android:id="@+id/txtContantDesignation"
                android:layout_weight="1"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Phone:"
                android:id="@+id/txtContantPhoneNumber"
                android:layout_weight="1"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="ID:01110201 "
        android:padding="2dp"
        android:textColor="@color/color_red"
        android:id="@+id/txtContantId" />
    <ImageView
        android:layout_width="20dp"
        android:background="@drawable/icon_list_arrow"
        android:layout_height="match_parent"
        android:padding="2dp" />
</LinearLayout>
